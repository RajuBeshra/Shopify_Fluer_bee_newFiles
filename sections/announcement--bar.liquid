{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}
<div class="announcement--bar">
  <div class="container">
    <div class="wrapper">
      <div class="content-wrap">
        {% if section.settings.text != blank %}
          <a href="{{ section.settings.link }}" class="link">
            <p class="text">{{ section.settings.text }}</p>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "header",
      "content": "Content",
      "info": "-------"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "We're here to help :) Call us at (855) 855-9770"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ]
}
{% endschema %}