<div class="accordian-item">
    <div class="accordian-header">
      <span class="accordian-header-text">{{header_text}}</span>
      <div class="accordian-icon-wrap">
        <span class="accordian-open accordian-icon">-</span>
        <span class="accordian-close accordian-icon">+</span>
      </div>
    </div>
      <div class="accordian-body">
          {% if body_text == 'guarante' %}
            <p class="text">All orders ship free, no minimum.</p>
            <p class="text">All orders are backed by our <b>100% satisfaction guarantee</b>. If you don't love your purchase in the first 30 days, we'll issue you a refund.</p>
            {% else %}
                {{ body_text }}
            {% endif %}
      </div>
</div>